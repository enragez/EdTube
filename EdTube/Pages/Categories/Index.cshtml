@page
@model EdTube.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Категории роликов";
}

<p>
    <a asp-page="Create">Добавить категорию</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Название</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Изменить</a> |
                <!--<a asp-page="./Details" asp-route-id="@item.Id">Посмотреть</a> | -->
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>