@page
@using EdTube.Models
@model EdTube.Pages.Channel.View

@{
    ViewData["Title"] = $"Видео с канала {Model.ChannelModel.Name}";
}

<script>    
    function openVideo(id){
        window.location.href = "/Video/View?id=" + id;
    }
</script>

<style>
    .video-block {
        cursor: pointer;
    }
    
    .video-thumbnail,
    .video-thumbnail > img {
        border-radius: 1rem !important;
    }
    
    .border-solid {
        border-style: solid;
    }
</style>

<h2> Видео с канала @Model.ChannelModel.Name</h2>
<div class="d-sm-flex flex-wrap">
    @foreach (var item in Model.Videos)
        {
            <div class="mt-3 mw-3 me-3 video-block " onclick="openVideo(@item.Id)">
                <div class="border-2 border-primary border-solid p-2">
                    <h3 class="text-center">@item.Name</h3>
                    <div class="video-thumbnail">
                        <img role="button" videoId="@item.Id" src="@item.ThumbnailFilePath" alt="@item.Name" />
                    </div>
                </div>
            </div>
        }
</div>
