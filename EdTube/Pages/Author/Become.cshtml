@page
@model EdTube.Pages.Author.Become
@{
    ViewData["Title"] = "Стать автором";
}

<style>
    #wrapper {
        width:  100%;
    }
    #wrapper #sidebar-wrapper{
        width: 50px;
    }

    #wrapper .sidebar-nav{
        display:none;
    }

    #wrapper.toggled .sidebar-nav{
        display:block;
    }
</style>

<div id="wrapper" class="toggled">

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="hidden" asp-for="Model.UserId" />
                <input type="hidden" asp-for="Model.Categories" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <select asp-for="Model.SelectedCategory" asp-items="Model.Model.Categories" class="form-control"></select>
                    <label asp-for="Model.SelectedCategory"></label>
                    <span asp-validation-for="Model.SelectedCategory" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Model.NewCategory" class="form-control" />
                    <label asp-for="Model.NewCategory"></label>
                    <span asp-validation-for="Model.NewCategory" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top: 8px">
                    <input type="submit" value="Подать заявку" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>