<div class="d-flex flex-column align-items-center">
    <h2>Видео с канала: @Model.VideoModel.ChannelModel.Name</h2>
    <div videoWrapperId="@Model.VideoModel.Id">
        <video id="@($"VideoPlayer-{Model.VideoModel.Id}")" src="@Model.VideoModel.FilePath" controls width="640" height="480" onended="onVideoEnded(arguments[0])"></video>
    </div>
    <h3>@Model.VideoModel.Name</h3>
    <button id="test-knowledge" class="btn btn-primary">Проверка знаний</button>
</div>

<div>
    <h2>Тест:</h2>
    @{
        foreach (var question in Model.VideoModel.Questions.OrderBy(q => q.Index))
        {
            <div class="mt-3">
                <h4>@question.Question</h4>
                <div class="mt-2 d-flex flex-column">
                    <div>
                        <input type="radio" id="@($"first{question.Index}")" name="@question.Index"/>
                        <label for="@($"first{question.Index}")">1 вариант ответа</label>
                    </div>

                    <div>
                        <input type="radio" id="@($"second{question.Index}")" name="@question.Index"/>
                        <label for="@($"second{question.Index}")">2 вариант ответа</label>
                    </div>

                    <div>
                        <input type="radio" id="@($"third{question.Index}")" name="@question.Index"/>
                        <label for="@($"third{question.Index}")">3 вариант ответа</label>
                    </div>

                    <div>
                        <input type="radio" id="@($"fourth{question.Index}")" name="@question.Index"/>
                        <label for="@($"fourth{question.Index}")">4 вариант ответа</label>
                    </div>
                </div>
            </div>
        }
    }
    <div class="form-group" style="margin-top: 8px">
        <button class="btn btn-primary" onclick="submitAnswers()">Завершить</button>
    </div>
            
</div>