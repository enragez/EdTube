@page
@model EdTube.Pages.Video.Upload
@{
    ViewData["Title"] = "Загрузить видео";
}

<style>
    #wrapper {
        width:  100%;
    }
    #wrapper #sidebar-wrapper{
        width: 50px;
    }

    #wrapper .sidebar-nav{
        display:none;
    }

    #wrapper.toggled .sidebar-nav{
        display:block;
    }
</style>

<div id="wrapper" class="toggled">

    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="UploadModel.UserId" />
                <input type="hidden" asp-for="UploadModel.Channels" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <select asp-for="UploadModel.SelectedChannel" asp-items="Model.UploadModel.Channels" class="form-control"></select>
                    <label asp-for="UploadModel.SelectedChannel"></label>
                    <span asp-validation-for="UploadModel.SelectedChannel" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="UploadModel.Name" class="form-control" />
                    <label asp-for="UploadModel.Name"></label>
                    <span asp-validation-for="UploadModel.Name" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="UploadModel.AttachTest" class="form-label">
                            <input class="form-check-input" asp-for="UploadModel.AttachTest" />
                            @Html.DisplayNameFor(m => m.UploadModel.AttachTest)
                        </label>
                    </div>
                </div>
                <div class="form-group" style="margin-top: 8px">
                    <label asp-for="UploadModel.Video"></label>
                    <input type="file" asp-for="UploadModel.Video" class="form-control" accept="video/*"/>
                    <span asp-validation-for="UploadModel.Video" class="text-danger"></span>
                </div>
                
                <div class="form-group" style="margin-top: 8px">
                    <input type="submit" value="Загрузить видео" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>