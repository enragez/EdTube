@page
@model EdTube.Pages.Test.AddQuestion

@{
    ViewData["Title"] = "Добавить вопрос к тесту";
}

<h1>Добавить вопрос к тесту</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Model.Index" />
            <input type="hidden" asp-for="Model.VideoId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Model.Question" class="form-control"/>
                <label asp-for="Model.Question"></label>
                <span asp-validation-for="Model.Question" class="text-danger"></span>
            </div>
            <div class="form-floating mt-4">
                <input asp-for="Model.FirstOption" class="form-control"/>
                <label asp-for="Model.FirstOption"></label>
                <span asp-validation-for="Model.FirstOption" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Model.SecondOption" class="form-control"/>
                <label asp-for="Model.SecondOption"></label>
                <span asp-validation-for="Model.SecondOption" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Model.ThirdOption" class="form-control"/>
                <label asp-for="Model.ThirdOption"></label>
                <span asp-validation-for="Model.ThirdOption" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Model.FourthOption" class="form-control"/>
                <label asp-for="Model.FourthOption"></label>
                <span asp-validation-for="Model.FourthOption" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Model.RightOption" class="form-control"/>
                <label asp-for="Model.RightOption"></label>
                <span asp-validation-for="Model.RightOption" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top: 8px">
                <input type="submit" value="Добавить вопрос" class="btn btn-primary"/>
                <input type="button" class="btn btn-success" value="Завершить" onclick="window.location= '@Url.Action( "Index", "Home")'" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}